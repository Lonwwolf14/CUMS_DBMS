<%- include('../Includes/begin.ejs') %>

    <div class="container-fluid">

        <div id="wrapper">

            <aside id="sidebar-wrapper">

                <div class="sidebar-brand">
                    <h2>CMS NSIT</h2>
                </div>

                <ul class="sidebar-nav">
                    <li class="active">
                        <a href="#"><i class="fa fa-home"></i>Overview</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-id-card"></i>Profile</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-calendar-check"></i>Attendance</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-calendar"></i>TimeTable</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sticky-note"></i>Marks</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-credit-card"></i>Fee History</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-graduation-cap"></i>Scholarship</a>
                    </li>
                    <hr>
                    <li>
                        <a href="#"><i class="fa fa-cog"></i>Settings</a>
                    </li>
                    <li>
                        <a href="/admin/logout"><i class="fa fa-sign-out-alt"></i>Logout</a>
                    </li>
                </ul>
            </aside>

            <div id="navbar-wrapper" style="position: fixed;">
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <a href="#" class="navbar-brand" id="sidebar-toggle"><i class="fa fa-bars"></i></a>
                        </div>
                    </div>
                </nav>
            </div>

            <section id="content-wrapper">
                <main role="main" class="pt-5 main">
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-4 d-flex align-items-center"
                    style="max-height: 100px; background-size: cover; background-position: center top;">
                        <h1>Hello <%= user.firstName %> </h1>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-sm-4">
                            <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                                <img height="250" class="card-img-top"
                                    src="https://unihub.mdx.ac.uk/__data/assets/image/0031/527089/MDXapp_my-attendance-mdx-app-red_1x1.jpg"
                                    alt="image">
                                <div class="card-body">
                                    <h5 class="card-title">Attendance</h5>
                                    <p class="card-text">View the attendance status for each of your courses. (Make sure
                                        that
                                        the atted. is atleast 75%) </p>
                                    <a href="#" class="btn btn-primary">View Attendance</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                                <img height="250" class="card-img-top"
                                    src="https://cdn.iconscout.com/icon/premium/png-256-thumb/marks-sheet-1816853-1541534.png"
                                    alt="image">
                                <div class="card-body">
                                    <h5 class="card-title">Marks</h5>
                                    <p class="card-text">View the marks obtained for each of your courses. These include
                                        the
                                        marks upto your previous semester.</p>
                                    <a href="#" class="btn btn-primary">View Marks</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="card mb-5" style="box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, .15) !important;">
                                <img height="250" class="card-img-top"
                                    src="https://www.wikihow.com/images/thumb/5/5f/Make-a-Timetable-Step-3-Version-3.jpg/v4-460px-Make-a-Timetable-Step-3-Version-3.jpg.webp"
                                    alt="image">
                                <div class="card-body">
                                    <h5 class="card-title">Time Table</h5>
                                    <p class="card-text">View your timetable. (It shows the time table of all the
                                        courses
                                        you
                                        have registered for!)</p>
                                    <a href="#" class="btn btn-primary">View Timetable</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </main>
            </section>

        </div>



    </div>



    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <script>
        const $button = document.querySelector('#sidebar-toggle');
        const $wrapper = document.querySelector('#wrapper');

        $button.addEventListener('click', (e) => {
            e.preventDefault();
            $wrapper.classList.toggle('toggled');
        });
    </script>
</body>

</html>