<%- include('../Includes/begin.ejs') %>
    <%- include('../Includes/staff_nav.ejs') %>


        <section id="content-wrapper">
            <main role="main" class="pt-5 main">

                <div class="main-content">
                    <!-- Header -->
                    <div class="header pb-4 pb-sm-8 pt-5 pt-lg-8 d-flex align-items-center"
                        style="height: 100px; background-size: cover; background-position: center top;">
                        <!-- Header container -->

                    </div>
                    <!-- Page content -->
                    <div class="container-fluid mt--7">
                        <div class="row">
                            <div class="col-xl-12 order-xl-1">
                                <div class="card bg-secondary shadow">
                                    <div class="card-header bg-white border-0">
                                        <div class="row align-items-center">
                                            <div class="col-8">
                                                <h3 class="mb-0">My account</h3>
                                            </div>
                                            <div class="col-4 text-right">
                                                <a href="/staff/settings" class="btn btn-sm btn-primary">Settings</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body">

                                        <h6 class="heading-small text-muted mb-4">User information</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                            for="input-username">StaffID</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.st_id %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label" for="input-email">Name</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.st_name %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-lg-6">
                                                    <div class="form-group">
                                                        <label class="form-control-label" for="input-email">Email
                                                            address</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.email %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-6">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label" for="input-last-name">Date of
                                                            Birth</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= userDOB %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <!-- Address -->
                                        <h6 class="heading-small text-muted mb-4">Contact information</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Address</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.st_address %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                            for="input-city">Country</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>India</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label"
                                                            for="input-country">Contact</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>
                                                                <%= user.contact %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <hr class="my-4">
                                        <h6 class="heading-small text-muted mb-4">Responsibilities</h6>
                                        <div class="pl-lg-4">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Department</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p></p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-4">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Section</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>3</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group focused">
                                                        <label class="form-control-label">Semester</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>6th</p>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-4">
                                                    <div class="form-group">
                                                        <label class="form-control-label">Course Year</label>
                                                        <div class="card form-control form-control-alternative">
                                                            <p>2018 - 2022</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Description -->
                                        <h6 class="heading-small text-muted mb-4">About me</h6>
                                        <div class="pl-lg-4">
                                            <div class="form-group focused">
                                                <label>About Me</label>
                                                <textarea rows="4" class="form-control form-control-alternative"
                                                    placeholder="A few words about you ...">A beautiful Dashboard for Bootstrap 4. It is Free and Open Source.</textarea>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                </div>




            </main>
        </section>


        <%- include('../Includes/staff_end.ejs') %>